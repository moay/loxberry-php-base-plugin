{
    "name": "moay/loxberry-plugin",
    "description": "The base for LoxBerry plugins in modern, clean PHP",
    "type": "project",
    "require": {
        "php": ">=7.2",
        "pear/config_lite": "dev-master",
        "moay/loxberry-core": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "php-coveralls/php-coveralls": "^2.1",
        "phpro/grumphp": "^0.15.2",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "moay",
            "email": "mv@moay.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "LoxBerryPlugin\\": "src/",
            "LoxBerryPlugin\\Tests\\": "tests/"
        }
    },
    "config": {
        "vendor-dir": "./data/vendor"
    }
}
